<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    tools:context=".MainActivity"
    tools:ignore="MergeRootFrame" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/homescreen_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:layout_marginLeft="50dip"
            android:text="\t\t\t\t\t\t\t\t\tWelcome Vishal! \nHope you are having a great time!"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </TableRow>
    
        <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:layout_marginLeft="50dip"
            android:text="Nothing yet"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/settings_button"
        	android:layout_marginTop="30dip"
        	android:layout_marginLeft="50dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Settings" />

    </TableRow>
    
    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/connect_button"
        	android:layout_marginTop="30dip"
        	android:layout_marginLeft="50dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Connect to Jacket!" />

    </TableRow>
    

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:layout_height="fill_parent" >

        <Button
            android:id="@+id/drunk_button"
	        android:layout_marginTop="30dip"
	        android:layout_marginLeft="50dip"
            android:layout_width="wrap_content"
            android:layout_height="150dip"
            android:textSize="48sp"
            android:text="I&apos;m Drunk" />

    </TableRow>

</TableLayout>
